@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_themeManager.Theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudMainContent Style="height: 100%">
        <MudContainer MaxWidth="MaxWidth.Large" Style="height: 100%;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private ThemeManagerTheme _themeManager = new()
    {
        Theme = new()
        {
            Palette = new()
            {
                Primary = "#6ba393",
                Secondary = "#ffd194",
                Tertiary = "#008080",
                Info = "#40E0D0",
                Success = "#008000",
                Warning = "#FF8C00",
                Error = "#FF0000",
                Surface = "#FFF",
                TextPrimary = "#000000"
            },
            PaletteDark = new()
            {
                Primary = "#6ba393",
                Secondary = "#ffd194",
                Tertiary = "#008080",
                Info = "#40E0D0",
                Success = "#008000",
                Warning = "#FF8C00",
                Error = "#FF0000",
                Surface = "#222222",
                TextPrimary = "#FFFFFF"
            }
        }
    };

    private bool _isDarkMode;

    protected override void OnInitialized()
        => StateHasChanged();
}