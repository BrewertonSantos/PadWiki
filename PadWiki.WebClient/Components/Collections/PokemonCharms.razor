@using PadWiki.WebClient.Services.Contracts
@using PadWiki.WebClient.Entities
@using Humanizer
@inject IPokemonCharmsService PokemonCharmsService

<div class="row w-100">
    <div class="col-2">
        <div
            class="nav flex-column nav-tabs text-center"
            id="v-tabs-tab"
            role="tablist"
            aria-orientation="vertical">
            @foreach (var charm in PokemonCharmsService.Charms)
            {
                <a
                    class="nav-link"
                    id="v-tabs-@charm.Name.Kebaberize()-tab"
                    data-mdb-toggle="tab"
                    href="#v-tabs-@charm.Name.Kebaberize()"
                    role="tab"
                    aria-controls="v-tabs-@charm.Name.Kebaberize()"
                    aria-selected="true">
                    <div class="d-inline-flex position-relative">
                        <img src="@charm.ImageUrl" alt="Avatar" style="width: 50px; height: 50px;">
                    </div>
                    <br/>
                    @charm.Name
                </a>
            }
        </div>
    </div>

    <div class="col-10">
        <div class="tab-content" id="v-tabs-tabContent">
            @foreach (var charm in PokemonCharmsService.Charms)
            {
                <div
                    class="tab-pane fade show"
                    id="v-tabs-@charm.Name.Kebaberize()"
                    role="tabpanel"
                    aria-labelledby="v-tabs-@charm.Name.Kebaberize()-tab">
                    <h1>@charm.Name</h1>
                    <h4>@charm.Description</h4>
                    <hr/>
                    <i class="fas fa-dice-three fa-fw me-2"/>
                </div>
            }
        </div>
    </div>
</div>

