@using PadWiki.WebClient.Services.Contracts
@using PadWiki.WebClient.Entities
@using Humanizer
@inject IPokemonCharmsService PokemonCharmsService

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
    <tr>
        <th></th>
        <th>Usage Info</th>
        <th>Title</th>
        <th>Status</th>
        <th>Position</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var charm in PokemonCharmsService.Charms)
    {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img
                        src="@charm.ImageUrl"
                        class="rounded-circle"
                        alt="@charm.Name.Kebaberize()"
                        style="width: 45px; height: 45px"/>
                    <div class="ms-3">
                        <p class="fw-bold mb-1">@charm.Name</p>
                        <p class="text-muted mb-0">@charm.Description</p>
                    </div>
                </div>
            </td>
            <td>
                <p class="fw-normal mb-1">@charm.UsageInfo</p>
            </td>
            <td>
                @if (charm.FirstLevel is not null)
                {
                    <p class="badge badge-success rounded-pill d-inline-block">
                        <i class="fas fa-dice-one fa-fw me-2"/> @charm.FirstLevel
                    </p>
                }
                <br>
                <span class="badge badge-warning rounded-pill d-inline-block">
                    <i class="fas fa-dice-two fa-fw me-2"/> @charm.SecondLevel
                </span>
                <br>
                <span class="badge badge-danger rounded-pill d-inline-block">
                    <i class="fas fa-dice-three fa-fw me-2"/> @charm.ThirdLevel
                </span>
            </td>
            <td></td>
            <td>
                <button
                    type="button"
                    class="btn btn-link btn-rounded btn-sm fw-bold"
                    data-mdb-ripple-color="dark">
                    Edit
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

